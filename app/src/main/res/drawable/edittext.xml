<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="12dip" />
            <stroke android:width="1dip" android:color="#E48A4E" />
            <gradient android:angle="-90" android:startColor="#E48A4E" android:endColor="#E48A4E"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="12dip" />
            <stroke android:width="1dip" android:color="#B85412" />
            <solid android:color="#B85412"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="12dip" />
            <stroke android:width="1dip" android:color="#E48A4E" />
            <gradient android:angle="-90" android:startColor="#E48A4E" android:endColor="#E48A4E" />
        </shape>
    </item>
</selector>