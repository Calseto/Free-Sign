<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/add_vacancies_backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:text="< Back"
        android:textColor="#95BFBE"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/add_vacancies_judul"
        app:layout_constraintStart_toStartOf="@+id/add_vacancies_judul" />

    <TextView
        android:id="@+id/add_vacancies_judul"
        android:layout_width="171dp"
        android:layout_height="94dp"
        android:text="Make A Vacancies"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.191" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="35dp"
        android:layout_height="31dp"
        android:layout_marginTop="20dp"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/add_vacancies_judul"
        app:layout_constraintTop_toBottomOf="@+id/add_vacancies_judul"
        app:srcCompat="@drawable/ic_deadline" />

    <EditText
        android:id="@+id/add_vacancies_edtTxt_deadline"
        android:layout_width="326dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/my_vacancies_box"
        android:ems="10"
        android:inputType="textCapSentences"
        android:paddingLeft="10dp"
        android:text="Date"
        android:textAlignment="viewStart"
        android:textColor="#7E7B7B"
        android:textCursorDrawable="@null"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView10" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="35dp"
        android:layout_height="31dp"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toBottomOf="@+id/imageView10"
        app:srcCompat="@drawable/ic_baseline_monetization_on_24" />

    <EditText
        android:id="@+id/add_vacancies_edtTxt_price"
        android:layout_width="326dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/my_vacancies_box"
        android:ems="10"
        android:inputType="textCapSentences"
        android:paddingLeft="10dp"
        android:text="Price"
        android:textAlignment="viewStart"
        android:textColor="#7E7B7B"
        android:textCursorDrawable="@null"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="35dp"
        android:layout_height="31dp"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toBottomOf="@+id/imageView11"
        app:srcCompat="@drawable/ic_baseline_add_24" />

    <EditText
        android:id="@+id/add_vacancies_edtTxt_detail"
        android:layout_width="326dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/my_vacancies_box"
        android:ems="10"
        android:inputType="textCapSentences"
        android:paddingLeft="10dp"
        android:text="Date"
        android:textAlignment="viewStart"
        android:textColor="#7E7B7B"
        android:textCursorDrawable="@null"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imageView12"
        app:layout_constraintTop_toTopOf="@+id/imageView12" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:background="@drawable/mybutton"
        android:text="Posting"
        android:textColor="#2196F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_vacancies_edtTxt_detail" />
</androidx.constraintlayout.widget.ConstraintLayout>